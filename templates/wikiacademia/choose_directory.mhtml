<span style="white-space:normal">
<script type="text/javascript">
  function set_dir(the_dir){
    document.getElementById('directory_select').selectedIndex = 0;
    document.getElementById('chosen_directory').value = the_dir;
  }
</script>
<style type="text/css">
 #directory_select option {
   font-family: monospace;
   white-space: pre;
 }
</style>
<input type="text" name="chosen_directory" id="chosen_directory" 
         value="<% $chosen_directory %>" size="24" maxlength="64" /> 
<select id="directory_select">
 <option selected value="">choose...</option>
 <option value="/" onClick="set_dir('/')">/</option>
 <option value="/a" onClick="set_dir(' a')"> a/</option>
</select>
</span><%args>
 $chosen_directory => ''
</%args><%init>
</%init>
