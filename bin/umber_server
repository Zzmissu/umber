#!/usr/bin/env bash

# Is the project environment setup?
: ${UMBER_ROOT:?"Setup environment with 'source env/activate' first."}
cd $UMBER_ROOT   # Set the working folder to the project root.

# stop old background servers
pkill -f flask

# start new background (http? https?) web server
flask run

# cd src
# python umber.py     &
# python umber.py ssl &
# cd ..
